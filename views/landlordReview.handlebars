{{!-- Landlord Review Form --}}
<h2>Review for {{landlord.name}}</h2>

<form id="landlordReviewForm">

    <label for="rating">Rating:</label>
    <input type="number" id="rating" name="rating" min="1" max="5" required>
    
    <label for="kindnessRating">Kindness Rating:</label>
    <input type="number" id="kindnessRating" name="kindnessRating" min="1" max="5" required>
    
    <label for="maintenanceResponsivenessRating">Maintenance Responsiveness Rating:</label>
    <input type="number" id="maintenanceResponsivenessRating" name="maintenanceResponsivenessRating" min="1" max="5" required>
    
    <label for="overallCommunicationRating">Overall Communication Rating:</label>
    <input type="number" id="overallCommunicationRating" name="overallCommunicationRating" min="1" max="5" required>
    
    <label for="professionalismRating">Professionalism Rating:</label>
    <input type="number" id="professionalismRating" name="professionalismRating" min="1" max="5" required>
    
    <label for="handinessRating">Handiness Rating:</label>
    <input type="number" id="handinessRating" name="handinessRating" min="1" max="5" required>
    
    <label for="depositHandlingRating">Deposit Handling Rating:</label>
    <input type="number" id="depositHandlingRating" name="depositHandlingRating" min="1" max="5" required>
    
    <label for="reviewText">Review:</label>
    <textarea id="reviewText" name="reviewText" required></textarea>
    
    <button type="submit">Submit Review</button>
    
</form>
