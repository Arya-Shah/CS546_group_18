<link rel="shortcut icon" href="#">
<script src="/public/js/client_side_validation.js"></script>
</head>
<body>
<header>
<nav>
<div class="logo">
<h1><a href="/">Apartment Hunt Helper</a></h1>
</div>
{{#if userData}}
<form id="searchForm" action="/searchProperty" method="GET">
<label for="searchProperty"></label>
<input class="search-input" type="text" id="searchProperty" name="name" placeholder="Search for Properties">
<button class="search-button" type="submit" value="Find Property">Search</button>
</form>
{{/if}}
<div class="user-container">
{{!-- to show/hide based on user session --}}
{{#if userData}}
<a href="/user/profile">Profile</a>
<a href="/logout">Logout</a>
{{/if}}
</div>
</nav>
</header>

<main>
{{{body}}}
</main>

{{#if success}}
<p class="success"> {{success}}</p>
{{/if}}
</body>
</html>
