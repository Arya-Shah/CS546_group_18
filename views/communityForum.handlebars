            <p>Dislikes: {{this.dislikes}}</p>
            <p><a href="/upvote/comment/{{this.commentId}}">Upvote Comment</a> / <a href="/downvote/comment/{{this.commentId}}">Downvote Comment</a></p>
          </li>
          {{/each}}
        </ul>
        {{/if}}-->
      </li>
      {{/each}}
    </ul>
  </div>
  {{/each}}
</div>

