<form id="reportForm" action="/report/{{reportState}}/{{id}}/{{propertyId}}" method="POST">
    {{#if error}}
    <p class="error">{{error}}</p>
    {{/if}}
    {{!-- <label for="reportedItem_type">Report on:</label>
